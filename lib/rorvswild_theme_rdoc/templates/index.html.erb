    <main class="container">
      <section>
        <ul class="card-grid">
          <% for project in @projects %>
            <li class="card">
              <% if project.docs.size > 1 %>
                <details>
                  <summary><a href="<%= project.docs.first.url %>"><%= project.name %></a></summary>
                  <ul>
                    <% for doc in project.docs %>
                      <li><a href="<%= doc.url %>"><span class="version"><%= doc.version %></span></a></li>
                    <% end %>
                  </ul>
                </details>
              <% else %>
                <a href="<%= project.docs.first.url %>"><%= project.name %></a>
              <% end %>
            </li>
          <% end %>
        </ul>
      </section>

