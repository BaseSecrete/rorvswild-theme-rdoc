    <link href="rails/8.0/css/fonts.css" rel="stylesheet">
    <link href="rails/8.0/css/rdoc.css" rel="stylesheet">
    <style>
      body {
        border-top: 8px solid var(--color-topbar);
        font-variant-numeric: tabular-nums;
        --color-shadow: oklch(0.1 0.01 269 / 0.1)
      }

      body > header {
        padding: 1rem;
        text-align: center;
      }

      .logo {
        text-align: center;
        display:inline-flex;
        flex-direction: column;
        color: var(--color-text);
        text-decoration: none;
        align-items: center;
        font-size: 0.694rem;
        font-weight: 700;
      }

      .logo svg {
        display: block;
        width: 32px;
        height: 32px;
        position: relative;
        overflow: visible;
      }

      .logo svg polygon {
        fill: var(--color-topbar);
        transition: all 0.1s ease-in-out;
      }

      .logo:hover svg polygon.poly-1 { transform: translateY(-1px); }
      .logo:hover svg polygon.poly-2 { transform: translateY(1px); }
      .logo:hover svg polygon.poly-3 { transform: translateX(1px); }
      .logo:hover svg polygon.poly-4 { transform: translateX(-1px); }

      .logo span {
        display: block;
        margin-top: 0.25rem;
      }

      header h1 { 
        margin: 2rem 0 0;
        font-size: 2.074rem;
        letter-spacing: -0.02em;
      }

      p { color: var(--color-text-light); }

      header p {
        margin: 0;
        font-size: 1rem;
      }

      body > main {
        padding: 1rem;
        width: calc(100% - 2rem);
        display: block;
        max-width: 800px;
        margin: 2rem auto;
      }

      .card-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 1rem;
      }

      .card {
        padding: 1rem;
        background-color: var(--color-code-background);
        box-shadow: 0 0 0 1px var(--color-border) inset;
        border-radius: 0.5rem;
        font-weight: 700;
      }

      .card-grid .card a .version {
        display: inline-block;
        box-shadow: 0 0 0 1px var(--color-border) inset;
        background-color: var(--color-background);
        color: var(--color-text-light);
        text-decoration: none;
        padding: 0 0.5rem;
        border-radius: 0.75rem;
        margin-left: 0.25rem;
        font-size: 0.833rem;
        font-weight: 400;
      }

      .card-grid .card a:hover .version {
        color: inherit;
      }

      details > summary:hover { cursor: pointer; }

      details > summary::after {
        top: 0;
        background-color: var(--color-background);
      }

      section.contact {
        padding: 3rem;
        background-color: var(--color-topbar);
        color: var(--color-topbar-text);
        border-radius: 0.5rem;
        text-align: center;
        margin-top: 3rem;
      }

      section.contact h2 {
        color: inherit;
        font-size: 1rem;
        line-height: 1.5;
        margin: 0 auto;
        box-shadow: none;
      }

      section.contact p { color: inherit; opacity: 0.7; }

      section.contact .button {
        display: inline-block;
        background-color: transparent;
        color: var(--color-topbar-text);
        box-shadow: 0 0 0 1px oklch(from var(--color-topbar-text) l c h / 0.3) inset,
                    0 1px 2px 1px var(--color-shadow);
        margin-top: 1rem;
        text-decoration: none;
        font-weight: 700;
        border-radius: 0.5rem;
        padding: 0.5rem 1rem;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        cursor: pointer;
      }

      section.contact .button:hover {
        color: oklch(from var(--color-topbar-text) calc(l + 0.1) c h);
        box-shadow: 0 0 0 1px oklch(from var(--color-topbar-text) l c h / 0.6) inset;
      }

      section.contact .button svg {
        width: 16px;
        height: 16px;
        fill: currentColor;
      }

      section.support {
        width: auto;
        margin-top: 4rem;
        padding: 3rem;
        text-align: center;
        box-shadow: 0 0 0 1px var(--color-border) inset;
        border-radius: 0.5rem;
        position: relative;
      }

      section.support .badge {
        background-color: var(--color-code-background);
        box-shadow: 0 0 0 1px var(--color-border) inset;
        border-radius: 0.5rem;
        font-size: 0.694rem;
        line-height: 1rem;
        padding: 0.25rem 0.5rem;
        top: -3.75rem;
        position: relative;
        display: inline-block;
      }

      section.support h2 {
        color: inherit;
        font-size: 1rem;
        line-height: 1.2;
        margin: 0 auto;
        box-shadow: none;
      }

      section.support .rorvswild-link {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
        color: inherit;
        text-decoration: none;
        text-align: center;
        margin-bottom: 2rem;
        font-family: var(--font-mono);
      }

      section.support span {
        display: block;
        top: 0.5em;
        font-size: 0.833rem;
        padding: 0;
      }

      section.support .rorvswild {
        width: 32px;
        height: 32px;
        fill: currentColor;
        display: inline-block;
        margin: 0 auto;
      }

      body > footer {
        display: block;
        padding: 1rem;
        text-align: center;
        font-size: 0.694rem;
        color: var(--color-text-light);
      }
    </style>
  </head>

